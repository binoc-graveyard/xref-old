$beginbonsai
<span class=bonsailinks>(View <a href="$bonsaihost/cvslog.cgi?file=$cvspath/$filename&amp;rev=$cvsversion">CVS log</a> or
 <a href="$bonsaihost/cvsblame.cgi?file=$cvspath/$filename&amp;mark=$fpos&amp;rev=$cvsversion">CVS annotations</a>)</span>
$endbonsai
$begintrac
<span class=bonsailinks>(View <a href="$trachost$virttree/log/$virtfold/$filename">SVN log</a>)</span>
$endtrac
$beginwebhg
<span class=bonsailinks>(View <a href="$webhghost/log/$hgbranch/$hgpath/$filename">Hg log</a> or
<a href="$webhghost/annotate/$hgversion/$hgpath/$filename">Hg annotations</a>)</span>
$endwebhg
