$beginbonsai
<span class=bonsailinks>(View <a href="$bonsaihost/cvslog.cgi?file=$pathname&amp;rev=$cvsversion">change log</a> or
 <a href="$bonsaihost/cvsblame.cgi?file=$pathname&amp;mark=$fpos&amp;rev=$cvsversion">blame annotations</a>)</span>
$endbonsai
$begintrac
<span class=bonsailinks>(View <a href="$trachost$virttree/log/$virtfold/$filename">change log</a>)</span>
$endtrac
$beginwebhg
<span class=bonsailinks>(View <a href="$webhghost/log/$hgbranch$urlpath">change log</a> or
<a href="$webhghost/annotate/$hgversion$urlpath">blame annotations</a>)</span>
$endwebhg
